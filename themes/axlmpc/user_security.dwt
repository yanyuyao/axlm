        //alert(val.uid +" "+ val.left_uid);
        //console.log(n+"-->"+val.user_name+"-->"+$(e).val());
        if(val.user_name == $(e).val()){
            flag = true;
            console.log("left uid : "+val.left_uid+" right uid : "+val.right_uid);
            left_uid = val.left_uid;
            right_uid = val.right_uid;
            $('#jiedianren_user_id').val(val.uid);
        }
    });
    if(flag){
        //alert(left_uid+"==="+right_uid);
        if(left_uid == 0){
            selectbody += '<option value="left">左区</option>'
        }
        if(right_uid == 0){
